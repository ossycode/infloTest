@model UserManagement.Web.Models.Users.CreateUserViewModel


<a asp-controller="Users" asp-action="List" class="link-hover">Back to Users List</a>
<h2>Create User</h2>

<div class="w-50">
    <form asp-controller="Users" asp-action="Create" method="post">

        @*Forename*@
        <div class="form-field flex">
            <div class="w-25">
                <label asp-for="Forename" class="form-label pt">Forename</label>
            </div>
            <div class="flex-1">
                <input asp-for="Forename" class="form-input" />
                <span asp-validation-for="Forename" class="error"></span>

            </div>
        </div>

        @*Surname*@
        <div class="form-field flex">
            <div class="w-25">
                <label asp-for="Surname" class="form-label pt">Surname</label>
            </div>
            <div class="flex-1">
                <input asp-for="Surname" class="form-input" />
                <span asp-validation-for="Surname" class="error"></span>
            </div>
        </div>

        @*Email*@
        <div class="form-field flex">
            <div class="w-25">
                <label asp-for="Email" class="form-label pt">Email</label>
            </div>
            <div class="flex-1">
                <input asp-for="Email" class="form-input" />
                <span asp-validation-for="Email" class="error"></span>
            </div>
        </div>

        @*DateOfBirth*@
        <div class="form-field flex">
            <div class="w-25">
                <label asp-for="DateOfBirth" class="form-label pt">Date of Birth</label>
            </div>
            <div class="flex-1">

                <input asp-for="DateOfBirth" class="form-input" />
                <span asp-validation-for="DateOfBirth" class="error"></span>
            </div>
        </div>

        @*IsActive*@
        <div class="form-field flex">
            <div class="w-25">
                <label asp-for="IsActive" class="form-label">Account Active</label>
            </div>
            <div class="flex-1">
                <input asp-for="IsActive" value="true" />
                <label for="IsActive">Active</label>
            </div>
        </div>

        @*Submit*@
        <div class="form-field flex">
            <div class="w-25">
            </div>
            <div class="flex-1">
                <button class="button button-green-back">Create</button>

                @if (ViewBag.Errors != null)
                {
                    <div class="text-red ml">
                        <ul>
                            @foreach (string error in ViewBag.Errors)
                            {
                                <li class="ml">@error</li>
                            }
                        </ul>
                    </div>
                }
            </div>
        </div>

    </form>
</div>

<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.4/jquery.validate.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.12/jquery.validate.unobtrusive.min.js"></script>
