@model UserManagement.Web.Models.Users.UserListItemViewModel


<a asp-controller="Users" asp-action="List" class="link-hover">Back to Users List</a>
<h2>Delete @Model.Forename</h2>
<h3>Are you sure you want to delete this user?</h3>

<div class="w-50">
    <form asp-controller="Users" asp-action="Delete" method="post">
        <input type="hidden" asp-for="Id" />

        @*Forename*@
        <div class="form-field flex">
            <div class="w-25">
                <label asp-for="Forename" class="form-label pt">Forename</label>
            </div>
            <div class="flex-1">
                <input asp-for="Forename" class="form-input" disabled />
                <span asp-validation-for="Forename" class="error"></span>

            </div>
        </div>

        @*Surname*@
        <div class="form-field flex">
            <div class="w-25">
                <label asp-for="Surname" class="form-label pt">Surname</label>
            </div>
            <div class="flex-1">
                <input asp-for="Surname" class="form-input" disabled />
                <span asp-validation-for="Surname" class="error"></span>
            </div>
        </div>

        @*Email*@
        <div class="form-field flex">
            <div class="w-25">
                <label asp-for="Email" class="form-label pt">Email</label>
            </div>
            <div class="flex-1">
                <input asp-for="Email" class="form-input" disabled />
                <span asp-validation-for="Email" class="error"></span>
            </div>
        </div>


        @*Submit*@
        <div class="form-field flex">
            <div class="w-25">
            </div>
            <div class="flex-1">
                <button class="button button-red-back">Delete User</button>
            </div>
        </div>

    </form>
</div>

